<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard1.4;net45</TargetFrameworks>
    <AssemblyName>AlexaMessageBuilder</AssemblyName>
    <Version>1.0.0-beta-2</Version>
  </PropertyGroup>
  <PropertyGroup>
    <Description>
      A .NET Standard package for building Alexa messages. Inspired by the NPM package 'alexa-message-builder'. 
    </Description>
    <Authors>Nozzlegear</Authors>
    <Copyright>Nozzlegear Software</Copyright>
    <PackageLicenseUrl>https://raw.githubusercontent.com/nozzlegear/alexa-message-builder/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/nozzlegear/alexa-message-builder</PackageProjectUrl>
    <RepositoryUrl>https://github.com/nozzlegear/alexa-message-builder</RepositoryUrl>
    <PackageTags>alexa,echo</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="newtonsoft.json" Version="10.0.3" />
  </ItemGroup>
</Project>